{
	"name": "react-quiz",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@material-ui/core": "^4.11.4",
		"@testing-library/jest-dom": "^5.12.0",
		"@testing-library/react": "^11.2.7",
		"@testing-library/user-event": "^12.8.3",
		"axios": "^0.21.1",
		"formik": "^2.2.9",
		"husky": "^7.0.1",
		"is_js": "^0.9.0",
		"node-sass": "^6.0.1",
		"normalize.css": "^8.0.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.4",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.3",
		"redux": "^4.1.0",
		"redux-thunk": "^2.3.0",
		"web-vitals": "^1.1.2",
		"yup": "^0.32.9"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"lint:fix": "eslint src --fix",
		"prepare": "husky install",
		"deploy": "npm build && firebase deploy"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"eslint:recommended"
		],
		"rules": {
			"semi": [
				"error",
				"never"
			],
			"no-mixed-spaces-and-tabs": [
				2,
				"smart-tabs"
			],
			"quotes": [
				"error",
				"double",
				{
					"avoidEscape": true,
					"allowTemplateLiterals": true
				}
			]
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx}": [
			"eslint src --fix",
			"git add"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"eslint": "^7.30.0",
		"eslint-plugin-react": "^7.24.0",
		"lint-staged": "^11.0.0"
	}
}
